@model Message

<div class="text-center">
   <img class="img-fluid resize"  src = "/Images/logo.jpg"/>
</div>
<br />


@if (ViewData["messages"] != null)
{
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
          <div class="col-md-6">
            <div class="card card-bordered">
              <div class="card-header text-center">
                <h4 class="card-title"><strong>Any questions? Write to me! </strong></h4>
              </div>


              <div class="ps-container ps-theme-default ps-active-y" id="chat-content" style="overflow-y: scroll !important; height:400px !important;">

                            @foreach(var values in ViewData["messages"] as IList<Message>)
                            {
                                @if(@values.Sender == @Model.Sender)
                                   {
                                     <div class="media media-chat media-chat-reverse">
                                       <div class="media-body text-end">
                                          <p> @values.userMessage <i class="bi bi-arrow-left-circle"></i>  </p>
                                       </div>
                                     </div>
                                   }
                                else
                                   {
                                     <div class="media media-chat media-chat-reverse">
                                       <div class="media-body">
                                          <p>  <i class="bi bi-arrow-right-circle"></i> @values.userMessage </p>
                                       </div>
                                     </div>     
                                   }   
                            }

              <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;"><div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;"><div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div></div></div>

            <form method="post">
            <input asp-for="Recipient" type="hidden" />
            <input asp-for="RecipientName" type="hidden" />
            <input asp-for="SenderName" type="hidden" />

            <div class="form-group">
                <input asp-for="userMessage" class="form-control" autocomplete="username" aria-required="true" />
            </div>
            <div class ="mdl-layout-spacer">
                 <div class ="text-end"> 
                     <button id="registerSubmit" type="submit" class=" btn btn-primary">Wyslij wiadomosc</button>
                 </div>
            </div>
            </form>
            <br>

             </div>
          </div>
          </div>
          </div>
          </div>    
}

else{
    <p>Start the conversation</p>
}






