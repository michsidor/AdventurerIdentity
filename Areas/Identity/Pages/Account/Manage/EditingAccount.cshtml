@page
@{
    ViewData["Title"] = "Editing profile";
    ViewData["ActivePage"] = ManageNavPages.EditingAccount;
}
@model EditingAccount
<form method="post">
<input asp-for="UniqueCode" type="hidden" />
<input asp-for="OldHobbysSave" type="hidden" />
<input asp-for="Gender" type="hidden" />
<input asp-for="userLoginId" type="hidden" />
<input asp-for="Id" type="hidden" />

<h3>@ViewData["Title"]</h3>

<div class="form-group row">
  <label asp-for="Name" class="col-sm-2 col-form-label">Edit name</label>
  <div class="col-sm-10">
     <input asp-for="Name" class=form-control/>
  </div>
</div>

<div class="form-group row">
  <label asp-for="Country" class="col-sm-2 col-form-label">Edit country</label>
  <div class="col-sm-10">
     <input asp-for="Country" class=form-control/>
  </div>
</div>

<div class="form-group row">
  <label asp-for="City" class="col-sm-2 col-form-label">Edit city</label>
  <div class="col-sm-10">
     <input asp-for="City" class=form-control/>
  </div>
</div>

  <legend class="mt-4 display-10"><i class="bi bi-card-checklist"></i> Select type of activity again:</legend>
	@foreach(var item in @Model.Checkboxes){
      <div class ="form-check form-check-inline display-8" >
        <input class="form-check-input" type="checkbox" value="@item.Value" name="ChoosedHobbys" id="checkbox2_@item.Value" checked="@item.IsChecked">
	    <label class="form-check-label" for="checkbox2_@item.Value"> @item.Value</label>
	 </div>
	}

 <div class="form-group">
     <div class="text-end">
          <input type="submit" value="Edit" class="btn btn-primary" />
     </div>
 </div>


    </div>
</div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


